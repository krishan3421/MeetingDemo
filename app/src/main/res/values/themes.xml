<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StitchCredit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StitchCredit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StitchCredit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="blue_round_button" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_round_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_size_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <!--  <item name="android:drawableLeft">@drawable/facebook_icon</item>-->
    </style>

    <style name="Theme.StitchCredit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>